{
  "env": {
    "EDITOR": "nvim -n +'set awa' +'startinsert'",
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "0",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1",
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "1"
  },
  "permissions": {
    "allow": [
      "Bash(emmylua_check)",
      "Bash(find:*)",
      "Bash(gh pr view)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Read(~/.config/git/message)",
      "Read(**/.env.sample)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:github.com)",
      "Write(/private/tmp)",
      "Write(**/.env.sample)",
      "mcp__context7",
      "mcp__serena",
      "mcp__voicevox__speak"
    ],
    "deny": [
      "Bash(chmod 777:*)",
      "Bash(do)",
      "Bash(for)",
      "Bash(gh repo delete:*)",
      "Bash(mongod:*)",
      "Bash(mysql:*)",
      "Bash(nc:*)",
      "Bash(psql:*)",
      "Bash(push:*)",
      "Bash(pushf:*)",
      "Bash(sudo:*)",
      "Bash(wget:*)",
      "Read(**/*.env*)",
      "Read(**/*aws*)",
      "Read(**/*key)",
      "Read(**/*token*)",
      "Read(**/*secrets*)",
      "Read(**/*production*)",
      "Read(id_ed25519)",
      "Read(id_rsa)",
      "Write(**/*.env*)",
      "Write(**/*aws*)",
      "Write(**/*key)",
      "Write(**/*production*)",
      "Write(**/*secrets*)",
      "Write(**/*token*)",
      "Write(id_ed25519)",
      "Write(id_rsa)",
      "mcp__supabase__execute_sql"
    ],
    "ask": [
      "Bash(curl:*)",
      "Bash(git checkout:*)",
      "Bash(git config:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git rm:*)",
      "Bash(git switch:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.config/claude/hooks/notify.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.config/claude/hooks/stop.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "outputStyle": "Explanatory",
  "language": "ja",
  "alwaysThinkingEnabled": true,
  "showTurnDuration": true
}
